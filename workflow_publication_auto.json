        }
      },
      "name": "Schedule Trigger",
      "type": "n8n-nodes-base.scheduleTrigger",
      "typeVersion": 1,
      "position": [250, 300],
      "id": "schedule-trigger"
    },
    {
      "parameters": {
        "operation": "read",
        "sheetName": "Calendrier",
        "range": "A:O",
        "options": {
          "headerRow": 1
        }
      },
      "name": "Google Sheets - Lire Calendrier",
