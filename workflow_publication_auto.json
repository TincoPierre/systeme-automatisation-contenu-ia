      "typeVersion": 3,
      "position": [450, 300],
      "id": "google-sheets-read",
      "credentials": {
        "googleSheetsOAuth2Api": {
          "id": "1",
          "name": "Google Sheets account"
        }
      }
    },
    {
      "parameters": {
        "jsCode": "// Filtrer les posts à publier aujourd'hui\nconst today = new Date().toISOString().split('T')[0];\n\nconst items = $input.all();\nconst filteredItems = [];\n\nfor (const item of items) {\n  const statut = item.json.Statut;\n  const datePublication = item.json['Date Publication'];\n  \n  if (statut === 'Validé' && datePublication === today) {\n    filteredItems.push(item);\n  }\n}\n\nif (filteredItems.length === 0) {\n  return [{ json: { hasItems: false, count: 0 } }];\n}\n\nreturn filteredItems.map(item => ({\n  json: { ...item.json, hasItems: true }\n}));"
      },
      "name": "Filter Posts Aujourd'hui",
      "type": "n8n-nodes-base.code",
      "typeVersion": 2,
      "position": [650, 300],
      "id": "filter-code"
    },
    {
      "parameters": {
        "conditions": {
          "boolean": [
            {
              "value1": "={{ $json.hasItems }}",
              "value2": true
            }
          ]
        }
      },
      "name": "IF - Posts à publier ?",
      "type": "n8n-nodes-base.if",
      "typeVersion": 1,
      "position": [850, 300],
      "id": "if-node"
    },
